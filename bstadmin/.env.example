# Bstadmin-admin environment template
# Copy to .env and fill in real values on the server.
# Do NOT commit real secrets.

# App runtime
NODE_ENV=production
PORT=3100

# Database
# Optional (for local sync): server/production database as source
# SOURCE_DATABASE_URL="postgresql://USER:PASSWORD@SERVER_HOST:5432/DBNAME"
# Optional (for UI 2-way sync button in Settings): peer database URL
# SYNC_DATABASE_URL="postgresql://USER:PASSWORD@PEER_HOST:5432/DBNAME"
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME"

# NextAuth
NEXTAUTH_URL="https://admin.example.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Core API cutover flags (Phase-2)
CORE_API_BASE_URL="http://localhost:4000"
CORE_API_ADMIN_TOKEN=""
CORE_API_ADMIN_ROLE="ADMIN"
CORE_API_TIMEOUT_MS=8000
OPS_READ_NEW_MODEL_ENABLED=false
OPS_WRITE_CORE_ENABLED=false
OPS_WRITE_CORE_STRICT=false

# Email IMAP - Account 1 (GYG)
EMAIL_GYG_HOST="imap.hostinger.com"
EMAIL_GYG_PORT=993
EMAIL_GYG_USER="admin@yourdomain.com"
EMAIL_GYG_PASSWORD=""

# Email IMAP - Account 2 (OTA: Bokun/Trip.com/etc)
EMAIL_OTA_HOST="imap.hostinger.com"
EMAIL_OTA_PORT=993
EMAIL_OTA_USER="info@yourdomain.com"
EMAIL_OTA_PASSWORD=""


# Optional: disable IMAP TLS cert verification (NOT recommended)
# EMAIL_TLS_REJECT_UNAUTHORIZED=false

# GREEN-API WhatsApp
GREENAPI_INSTANCE_ID=""
GREENAPI_API_TOKEN=""
GREENAPI_GROUP_CHAT_ID=""
GREENAPI_BASE_URL="https://YOUR_INSTANCE.api.greenapi.com"
GREENAPI_DEFAULT_COUNTRY_CODE="62"
WHATSAPP_REVIEW_LINK=""

# Public app URLs (shown in UI)
NEXT_PUBLIC_APP_NAME="Balisnaptrip Admin"
NEXT_PUBLIC_APP_URL="https://admin.example.com"

# Cron auth secret for /api/cron/email
# Generate: openssl rand -hex 32
CRON_SECRET=""

# Optional: override cron-runner target. In Docker, leave empty (default uses container HOSTNAME).
# INTERNAL_CRON_BASE_URL=
# INTERNAL_CRON_HOST=
